    <!-- verific daca s-a transmis campul username -->
    <!-- campurile transmise in render devin proprietati ale obiectului locals -->
    <% if(!locals.username) { 
        if(locals.error) { %> 
            <script>
                let attempts=<%-locals.attemptsLeft%>;
                if(attempts<=4){
                    alert("Incorrect id/password. Attempts left: "+attempts);
                }
                else{
                    alert("Incorrect id/password. Next failed login will result in a 5 minute ban");
                }
            </script>
    <%} %>
        <form id="login" action="/login" method="post">
            <label>Username</label>
            <input type="text" id="username" name="username" required>
            <br>
            <label>Password</label>
            <input type="password" id="password" name="parola" required>
            <br>
            <input type="submit" id="submit" value="Log in">
        </form>      
    <% }
        else { %><p style="color:red; display: block; float: right; margin-top: 0%; margin-right: 1%;">
        User: <%= locals.username %> </p> <br>
        <a href="/logout" style="color:red; display: block; float: right; margin-right: 1%;">Logout</a>
        <% } %>
    <div id="inactivityDiv"></div>
